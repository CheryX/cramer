    "eslint-config-next": "12.1.6",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "purgecss": "^4.1.3",
    "stylelint": "^14.9.1",
    "stylelint-config-twbs-bootstrap": "^4.0.0"
  }
