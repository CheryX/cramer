{
  "private": true,
  "scripts": {
    "dev": "next",
    "dev:watch": "next-remote-watch ./posts",
    "build": "next build",
    "start": "next start -p 4000",
    "lint": "next lint",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace css/theme.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css css/theme.css --content index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output css/",
    "css": "npm-run-all css-compile css-prefix"
  },
  "dependencies": {
    "@svgr/webpack": "^6.2.1",
    "github-slugger": "^1.4.0",
    "gray-matter": "^4.0.2",
    "katex": "^0.16.0",
    "mdast-util-to-string": "^3.1.0",
    "next": "latest",
    "next-mdx-remote": "^4.0.3",
    "next-remote-watch": "1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rehype-highlight": "^5.0.2",
    "rehype-katex": "^6.0.2",
    "rehype-prism-plus": "^1.4.0",
    "remark-footnotes": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "tailwindcss": "^3.1.4",
    "unist-util-visit": "^4.1.0"
  },
  "browser": {
    "fs": false,
    "os": false
  },
